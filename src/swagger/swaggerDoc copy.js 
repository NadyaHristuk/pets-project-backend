const swaggerUI = require('swagger-ui-express');
const swaggerJsDoc = require('swagger-jsdoc');

const options = {
  swaggerDefinition: {
    openapi: '3.0.3',
    info: {
      title: 'Project Pets',
      version: '1.0.0',
      description: 'Express API for Project Pets, view what routes pass',
    },
    basePath: 'https://project-pets-api.herokuapp.com/',
  },
  apis: ['src/api/routes.js'],
};

const specs = swaggerJsDoc(options);

module.exports = app => {
  app.use('/doc', swaggerUI.serve, swaggerUI.setup(specs))};